<% if @success != nil %>
  <div class="alert alert-success" role="alert">
    <strong>Success!</strong> Your registration was completed. Feel free to browse and register for more sessions.
</div>
<% end %>

<h2>Select a Date</h2>

<input type="date" id="date" name="date">
<p></p><button type="button" class="btn btn-primary" id="submit">View Sessions</button>
<br>

<div class="page-header">
  <h3 id="date-title">
  </h3>
</div>

<div class="row">
  <div class="col-md-8">
    <table class="table" id="table" style="display:none">
      <thead id="table-header">
        <tr>
          <th style="text-align:center">Time</th>
          <th style="text-align:center">Current Capacity</th>
          <th style="text-align:center">Maximum Capacity</th>
        </tr>
      </thead>
      <tbody id="table-body">
        <tr>
      </tbody>
    </table>
  </div>
</div>

<script>
  var box = document.getElementById("date");
  box.valueAsDate = new Date();
</script>